    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "NestJS: Debug with ts-node",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "args": [
                "${workspaceFolder}/src/main.ts"
            ],
            "cwd": "${workspaceFolder}",
            
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.build.json"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "NestJS: Debug dist/main.js",
            "program": "${workspaceFolder}/dist/main.js",
            "cwd": "${workspaceFolder}",
            
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}